<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="co.kr.myportfolio.mapper.UserMapper">

    <!-- 사용자 등록 -->
    <insert id="insertUser" parameterType="User">
        INSERT INTO User (user_id, password, nickname, birth, introduce)
        VALUES (#{userId}, #{password}, #{nickname}, #{birth}, #{introduce});
    </insert>

    <!-- 사용자 조회 (ID로 검색) -->
    <select id="getUserById" resultType="User" parameterType="int">
        SELECT * FROM User WHERE user_id = #{user_id};
    </select>

    <!-- 사용자 조회 (user_id로 검색) -->
    <select id="getUserByUserId" resultType="User" parameterType="String">
        SELECT * FROM User WHERE user_Id = #{userId};
    </select>

    <!-- 닉네임 중복 체크 -->
    <select id="checkNicknameExists" resultType="boolean" parameterType="String">
        SELECT EXISTS (SELECT 1 FROM User WHERE nickname = #{nickname});
    </select>

    <!-- 아이디 중복 체크 -->
    <select id="checkUserIdExists" resultType="boolean" parameterType="String">
        SELECT EXISTS (SELECT 1 FROM User WHERE nickname = #{userId});
    </select>

    <!-- 사용자 정보 수정 -->
    <update id="updateUser" parameterType="User">
        UPDATE User
        SET password = #{password}, nickname = #{nickname}, birth = #{birth}, introduce = #{introduce}
        WHERE user_id = #{userId};
    </update>

    <!-- 사용자 삭제 -->
    <delete id="deleteUser" parameterType="int">
        DELETE FROM User WHERE user_id = #{userId};
    </delete>

</mapper>
